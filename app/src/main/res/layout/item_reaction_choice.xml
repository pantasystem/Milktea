<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
                name="reaction"
                type="String" />
        <variable
                name="notesViewModel"
                type="jp.panta.misskeyandroidclient.viewmodel.notes.NotesViewModel" />
    </data>
    <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            app:reactionImageView="@{reactionImagePreview}"
            app:reactionStringView="@{reactionStringPreview}"
            app:reaction="@{reaction}"
            android:onClick="@{ ()-> notesViewModel.postReaction(reaction) }"
            >
        <ImageView
                android:id="@+id/reactionImagePreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                tools:srcCompat="@mipmap/ic_launcher"
                tools:visibility="gone"
                tools:ignore="ContentDescription" />
        <TextView
                android:id="@+id/reactionStringPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="ðŸ˜‡"
                tools:visibility="visible"
                android:gravity="center"
                android:textColor="?android:textColorPrimary"
                />
    </FrameLayout>
</layout>
