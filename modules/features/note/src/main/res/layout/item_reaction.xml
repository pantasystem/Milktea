<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
    <data>
        <variable
                name="in"
                type="java.lang.String" />
        <variable
                name="reaction"
                type="net.pantasystem.milktea.note.reaction.ReactionViewData" />
        <variable
                name="note"
                type="net.pantasystem.milktea.note.viewmodel.PlaneNoteViewData" />


        <import type="net.pantasystem.milktea.common_android.ui.SafeUnbox" />
    </data>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            reactionImageTypeView="@{reactionImage}"
            reactionTextTypeView="@{reactionText}"
            reaction="@{reaction}"
            note="@{note}"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            tools:background="@drawable/shape_normal_reaction_backgruond"

            myReaction="@{note.myReaction}"
            reactionBackground="@{reaction}"
            nodeInfo="@{note.toShowNote.note.nodeInfo}"


            >
        <ImageView
                android:id="@+id/reactionImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="4dp"
                tools:ignore="ContentDescription"
                android:scaleType="fitCenter" />
        <TextView
                android:id="@+id/reactionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ðŸ˜‡"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginEnd="4dp"
                android:alpha="100"

                />
        <TextView
                android:id="@+id/reaction_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20"
                android:text='@{String.valueOf(SafeUnbox.unboxInt(reaction.reactionCount.count))}'
                android:layout_gravity="center"
                android:textSize="15sp"

                />

    </LinearLayout>
</layout>
